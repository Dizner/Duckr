<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_marginTop="10dp"
       android:layout_height="40dp">
       <cn.duckr.duckr.utils.CircleImageView
           android:id="@+id/yy_user_img"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="2dp"
           android:src="@mipmap/ic_launcher"/>
       
       <TextView
           android:id="@+id/home_yy_username"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="3dp"
           android:layout_toRightOf="@id/yy_user_img"
           android:layout_marginLeft="10dp"
           android:textColor="#000"
           android:textSize="16sp"
           android:text="用户"/>
       <TextView
           android:id="@+id/home_yy_user_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/yy_user_img"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/home_yy_username"
           android:textColor="#7d7d7d"
           android:gravity="center"
           android:layout_alignBottom="@id/yy_user_img"
           android:textSize="10sp"
           android:text="类型"/>
       <TextView
           android:id="@+id/home_yy_user_age"
           android:layout_width="30dp"
           android:layout_height="15dp"
           android:layout_marginTop="3dp"
           android:layout_toRightOf="@id/home_yy_username"
           android:layout_marginLeft="10dp"
           android:textColor="#fff"
           android:background="@drawable/boy"
           android:gravity="center_vertical|right"
           android:paddingRight="3dp"
           android:textSize="10sp"
           android:text="99"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="12dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:layout_centerVertical="true">
           <TextView
               android:id="@+id/home_yy_user_money"
               android:layout_width="wrap_content"
               android:layout_height="12dp"
               android:gravity="center|center_vertical"
               android:textColor="#7d7d7d"
               android:textSize="10sp"
               android:text="0"/>
           <ImageView
               android:layout_width="12dp"
               android:layout_height="12dp"
               android:layout_marginLeft="10dp"
               android:background="@drawable/ic_duckr_coins"/>
       </LinearLayout>

   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_yy_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7d7d7d"
            android:text="目的地标题等"/>
        <!--<TextView-->
            <!--android:id="@+id/home_yy_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="#7d7d7d"-->
            <!--android:text="要参加的活动标题"/>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_yy_tdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7d7d7d"
            android:text="日期时间"/>
    </LinearLayout>
    <TextView
        android:id="@+id/home_yy_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:elegantTextHeight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:textColor="#000"
        android:textSize="16dp"
        android:text="测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本"
        android:maxLines="3"/>

    <LinearLayout
        android:id="@+id/home_yy_tag"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_yy_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textColor="#7d7d7d"
            android:background="@drawable/bg_light"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="标签1"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/home_yy_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#7d7d7d"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_light"
            android:text="标签2"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/home_yy_tag_3"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#7d7d7d"
            android:background="@drawable/bg_light"
            android:text="标签3"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_yy_content_img_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/default_place"
            android:scaleType="centerInside"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/home_yy_content_img_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:scaleType="centerInside"
            android:background="@drawable/default_place"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/home_yy_content_img_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@drawable/default_place"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/home_yy_datecount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#7d7d7d"
            android:textSize="12sp"
            android:text="3天前 | 北京市海淀区"
            android:layout_weight="2.8" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_tourpic_comment"/>
            <TextView
                android:id="@+id/home_yy_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:textColor="#7d7d7d"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="评论"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/xingqu_2"/>
            <TextView
                android:id="@+id/home_yy_xingqu"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textColor="#7d7d7d"
                android:textSize="15sp"
                android:text="感兴趣"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>