<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffd900"
            >
                <ImageView
                    android:id="@+id/hp_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_home_calendar"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp" />

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="250dp"
                    android:layout_height="34dp"
                    app:cardBackgroundColor="#fbfaf5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/hp_1"
                    android:layout_toLeftOf="@+id/textView"
                    android:layout_centerVertical="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="#ffc773"
                                    android:text="搜索目的地、活动"/>
                        </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="发邀约"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/textView" />

        </RelativeLayout>
        <android.support.design.widget.TabLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/home_title"
            app:tabIndicatorHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            >
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:background="@color/all_background"
            android:id="@+id/vpShow_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>