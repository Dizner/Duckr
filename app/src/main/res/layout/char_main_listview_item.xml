<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_follow"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/char_main_itemname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/char_main_itemmatter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注人的动态消息"
                    android:textColor="#7d7d7d"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#d4dcd6"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:id="@+id/char_main_listview_item_messageicon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/message_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/char_main_listview_item_messagesize"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/message_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="10sp"/>


            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_time"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#9ea1a3"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
