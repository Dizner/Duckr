<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <View
        android:id="@+id/w_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <View
        android:id="@+id/w_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/w_1"
        android:clickable="false"
        android:background="#fff"/>

    <TextView
        android:id="@+id/w_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#727171"
        android:textSize="16sp"
        android:text="欢迎使用达客"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/w_3"
        android:layout_alignStart="@id/w_3"
        android:layout_alignEnd="@id/w_3"/>

    <TextView
        android:id="@+id/w_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9fa0a0"
        android:textSize="13sp"
        android:text="为了方便你的使用，进行下一步操作前"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/w_4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/w_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9fa0a0"
        android:textSize="13sp"
        android:text="请您注册一个达客账号"
        android:layout_below="@+id/w_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


    <ImageView
        android:id="@+id/w_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/welcome_icon"
        android:layout_alignTop="@+id/w_1"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:id="@+id/w_8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/w_2"
        android:layout_alignParentStart="true" >
        <TextView
            android:id="@+id/w_btn_blck"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#fff"
            android:onClick="onClick"
            android:text="下次再说"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/w_7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@+id/w_8"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#c0c6c9"
            android:layout_below="@+id/w_6"
            android:layout_marginTop="7dp"
            android:layout_above="@id/w_7"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/w_6"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/w_btn_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#727171"
                android:onClick="onClick"
                android:text="登录"
                android:layout_weight="1" />
            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="#c0c6c9"
                android:layout_above="@id/w_7"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/w_btn_zhuce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#727171"
                android:textSize="16sp"
                android:text="注册"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>