<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffea00">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/me_setting_about_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onclick">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:background="@drawable/small_arrow_left"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onclick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </LinearLayout>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:background="@drawable/splash_image"
        android:layout_marginTop="64dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/me_setting_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 3.0.2"
            android:textColor="#e29c45"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/www_duckr_cn"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wwwduckrcn"
            android:text="www.duckr.cn"
            android:textColor="#ae7c4f"
            android:textSize="18dp"
            android:gravity="center"
            android:onClick="onclick"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/baiyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京百应连城科技有限公司"
            android:textSize="10sp"
            android:textColor="#e29c45"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_below="@id/baiyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright©2015 duckr.cn 保留所有权利"
            android:textSize="10sp"
            android:textColor="#e29c45"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>


</LinearLayout>
