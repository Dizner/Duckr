<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="250dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ImageView
            android:id="@+id/hd_list_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_user2"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/home_hd_bg_item"
            android:alpha="1"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/hd_title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="17sp"
            android:text="煖居和食料理特供午间单人活鳗套餐"/>
        <TextView
            android:id="@+id/hd_addr"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="43dp"
            android:textSize="11sp"
            android:text="朝阳区新源西里东街·三元桥·924.41km"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/hd_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:background="@drawable/home_hd_type_btn"
                android:textSize="11sp"
                android:text="类型"
                />
            <TextView
                android:id="@+id/hd_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@id/hd_type"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="11sp"
                android:text="10.27-11.30 11:30-14:00"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentRight="true"
                   android:layout_alignBottom="@id/hd_time"
                   android:orientation="horizontal"
                   android:layout_marginRight="10dp">
                   <TextView
                       android:id="@+id/hd_picel"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="3dp"
                       android:textColor="#fff"
                       android:textSize="15sp"
                       android:gravity="bottom"
                       android:text="￥231"/>

                   <TextView
                       android:id="@+id/hd_piceltype"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:textColor="#fff"
                       android:layout_marginBottom="5dp"
                       android:gravity="bottom"
                       android:textSize="12sp"
                       android:text="起/人"/>
               </LinearLayout>
        </RelativeLayout>

        <CheckBox
            android:id="@+id/home_hd_xingqu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="center"
            android:button="@null"
            android:background="@drawable/xingqu"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <cn.duckr.duckr.utils.CircleImageView
                android:id="@+id/home_hd_userimg_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"/>
            <cn.duckr.duckr.utils.CircleImageView
                android:id="@+id/home_hd_userimg_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="23dp"/>
            <cn.duckr.duckr.utils.CircleImageView
                android:id="@+id/home_hd_userimg_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="43dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/home_hd_looks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="6人感兴趣"
            android:textColor="#000"/>
    </LinearLayout>
</LinearLayout>