<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dddcd6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/me_setting_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onclick">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:background="@drawable/small_arrow_left"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onclick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        />


    <RelativeLayout
        android:id="@+id/me_setting_push"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="onclick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推送通知"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_next2"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        />

    <RelativeLayout
        android:id="@+id/me_setting_playmedia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="onclick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIFI网络下自动播放视频"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>




    <CheckBox
        android:id="@+id/me_setting_WIFIbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:button="@drawable/set_switch"
        android:layout_marginRight="15dp"
        android:duplicateParentState="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        />




        </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <RelativeLayout
        android:id="@+id/me_setting_cleancache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="onclick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>

        <TextView
            android:id="@+id/me_setting_cachesize"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="0B"
            android:textColor="#7d7d7d"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        />

    <RelativeLayout
        android:id="@+id/me_setting_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="onclick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_next2"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <RelativeLayout
        android:id="@+id/me_setting_grade"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="onclick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给达客评分"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_next2"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <RelativeLayout
        android:id="@+id/me_setting_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="onclick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于达客"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_next2"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        />

    <RelativeLayout
        android:id="@+id/me_setting_Feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:onClick="onclick">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_next2"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/me_setting_logoff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffea00"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="退出登录"
            android:textSize="20sp"
            android:textColor="#6f4b3e"
            android:onClick="onclick"/>



    </RelativeLayout>


</LinearLayout>
